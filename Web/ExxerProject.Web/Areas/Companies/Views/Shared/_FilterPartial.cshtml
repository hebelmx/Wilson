@model FilterViewModel

<form class="form-horizontal" asp-area=@Constants.Areas.Companies asp-controller="Inquiries" asp-action=@nameof(InquiriesController.Filter) method="post">
    @Html.AntiForgeryToken()
    <h4>Inquiries Filter</h4>
    <hr />
    <div class="form-group">
        <label asp-for="From" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="From" class="form-control" type="date" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="To" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="To" class="form-control" type="date" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customers" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select class="form-control" id="CustomerId" name="CustomerId">
                <option asp-for="CustomerId" value="">Select all</option>
                @foreach (var customer in Model.Customers)
                {
                    <option asp-for="CustomerId" value=@customer.Id>@customer.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Assignees" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select class="form-control" id="AssigneeId" name="AssigneeId">                
                <option asp-for="AssigneeId" value="">Select all</option>
                @foreach (var assinee in Model.Assignees)
                {
                    <option asp-for="AssigneeId" value=@assinee.Id>@assinee.ToString()</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Filter</button>
        </div>
    </div>    
</form>





