@model IEnumerable<ShortUserViewModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a class="btn btn-sm btn-link" asp-area="Admin" asp-controller="ControlPanel" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    @if (user.IsActive)
                    {
                        <form asp-area="Admin" asp-controller="ControlPanel" asp-action="DeactivateUser" asp-route-id="@user.Id" method="post" class="form-horizontal" role="form">
                            <button type="submit" class="btn btn-sm btn-link">Deactivate</button>
                        </form>
                    }
                    else
                    {
                        <form asp-area="Admin" asp-controller="ControlPanel" asp-action="ActivateUser" asp-route-id="@user.Id" method="post" class="form-horizontal" role="form">
                            <button type="submit" class="btn btn-sm btn-link">Activate</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>