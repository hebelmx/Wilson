@model IList<ScheduleViewModel>


<form asp-area=@Constants.Areas.Scheduler asp-controller="Home" asp-action=@nameof(HomeController.EditSchedules)
      method="post" class="form-horizontal">
    @Html.AntiForgeryToken()
    <p class="lead text-danger">Edit Schedule for @Model[1].Date.ToString(Constants.DateTimeFormats.Short)</p>
    <div asp-validation-summary="All" class="text-danger"></div>
    <table class="table table-striped">
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model[i].Employee.ToString()</td>
                    <td>
                        @Html.EditorFor(x => x[i], "_ScheduleEdirorTemplate")
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-md-10">
            <button type="submit" class="btn btn-warning">Save Changes</button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <a class="btn btn-info"
               asp-area=@Constants.Areas.Scheduler
               asp-controller="Home"
               asp-action=@nameof(HomeController.EmployeesScheduler)>Cancel</a>
        </div>
    </div>
</form>